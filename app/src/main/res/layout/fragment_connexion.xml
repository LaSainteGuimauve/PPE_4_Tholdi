<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConnexionFragment">


    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="110dp"
        android:text="@string/Valider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_mdp" />

    <ImageView

        android:id="@+id/imageAccueilBateau"
        android:layout_width="244dp"
        android:layout_height="200dp"
        android:layout_marginTop="158dp"
        android:layout_marginBottom="41dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toTopOf="@+id/edit_text_identifiant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_bateau"
        tools:src="@drawable/logo_bateau"
        tools:srcCompat="@drawable/logo_bateau" />

    <EditText
        android:id="@+id/edit_text_mdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:autofillHints=""
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:text="Mot de passe"
        app:layout_constraintBottom_toTopOf="@+id/buttonLogin"
        app:layout_constraintStart_toStartOf="@+id/edit_text_identifiant"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_identifiant" />

    <EditText
        android:id="@+id/edit_text_identifiant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="32dp"
        android:autofillHints=""
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Identifiant"
        app:layout_constraintBottom_toTopOf="@+id/edit_text_mdp"
        app:layout_constraintStart_toStartOf="@+id/imageAccueilBateau"
        app:layout_constraintTop_toBottomOf="@+id/imageAccueilBateau" />

</androidx.constraintlayout.widget.ConstraintLayout>